{
  "name": "@pipeit/tx-builder",
  "version": "0.2.0",
  "description": "Type-safe transaction builder for Solana with smart defaults",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "solana",
    "transaction",
    "builder",
    "simplified"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@solana/kit": "^5.0.0",
    "@solana/addresses": "*",
    "@solana/functional": "*",
    "@solana/instructions": "*",
    "@solana/rpc": "*",
    "@solana/rpc-subscriptions": "*",
    "@solana/rpc-types": "*",
    "@solana/signers": "*",
    "@solana/transaction-messages": "*",
    "@solana/transactions": "*"
  },
  "peerDependenciesMeta": {
    "@solana/addresses": {
      "optional": false
    },
    "@solana/functional": {
      "optional": false
    },
    "@solana/instructions": {
      "optional": false
    },
    "@solana/rpc": {
      "optional": false
    },
    "@solana/rpc-subscriptions": {
      "optional": false
    },
    "@solana/rpc-types": {
      "optional": false
    },
    "@solana/signers": {
      "optional": false
    },
    "@solana/transaction-messages": {
      "optional": false
    },
    "@solana/transactions": {
      "optional": false
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@solana/kit": "^5.0.0",
    "@types/node": "^24",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}

