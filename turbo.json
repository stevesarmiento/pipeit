{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**"],
            "inputs": ["src/**", "app/**", "tsconfig.json", "tsup.config.ts", "next.config.js"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "typecheck": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "clean": {
            "cache": false,
            "outputs": []
        }
    }
}
